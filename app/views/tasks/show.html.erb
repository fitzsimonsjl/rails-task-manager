<h1><%= @task.title %></h1>

<ul>
  <%= @task.details %>

    <% if @task.completed %>
     <p>
       Completed!
     </p>
    <% else %>
     <p>
       This task is not completed yet.
     </p>
    <% end %>
</ul>

<p><%= link_to 'Back to list', '/tasks' %></p>
<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>


